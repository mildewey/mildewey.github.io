townGuard:
  name: Town Guard
  flavor: The uniform tabard is well kept, but shows signs of wear.
  class: Elite
  level: 1
  stats:
    Evasion: 5
    Defense: 7
    Resilience: 4
    Speed: 4
    Energy: 3
  powers:
    cleave:
      name: Cleave
      action: Attack
      pattern: Flurry
      uses: Energy
      description: >
        Each target takes 3d*3 damage.
    hook:
      name: Hook
      action: Attack
      pattern: Melee
      uses: At-Will
      description: >
      The target takes 3d*3 damage. If hit, it is Vulnerable and pulled up to 2 spaces.
    watchsDiscipline:
      name: Watch's Discipline
      action: Tactics
      uses: At-Will
      description: >
        Restore one condition. Refresh one defense token.
    reachAdvantage:
      name: Reach Advantage
      action: Guard
      concentration: Stance
      uses: At-Will
      description: >
        Increase defense by 1.
    guardsman:
      name: Guardsman
      action: Move
      uses: At-Will
      description: >
        If you end your movement next to an ally, they may refresh a defense token.
