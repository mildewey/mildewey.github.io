smokeMephit:
  name: Smoke Mephit
  flavor: The smoky figure is both frolicsome and fierce.
  class: Mob
  level: 1
  stats:
    Evasion: 7
    Defense: 5
    Resilience: 2
    Speed: 7
  powers:
    sear:
      name: Sear
      action: Attack
      effect:
      - target: Single
        apply:
        - 1d*8
      - target: Exposed
        apply:
        - Vulnerable
    puff:
      name: Puff
      action: Tactics
      effect:
      - target: Self
        apply:
        - Remove Hobbled
        - Remove Hobbled
        - Remove Hobbled
    wisp:
      name: Wisp
      action: Guard
      effects:
      - target: Self
        apply:
        - Resistance +5
    drift:
      name: Drift
      action: Move
      effects:
      - target: Self
        apply:
        - Ignore Hazardous Terrain
        - Ignore Zone

mudMephit:
  name: Mud Mephit
  flavor: The muddy terrain before you bubbles up into a dripping, prancing imp.
  class: Mob
  level: 1
  stats:
    Evasion: 6
    Defense: 7
    Resilience: 2
    Speed: 5
  powers:
    fling:
      name: Fling
      action: Attack
      effect:
      - target: Single
        apply:
        - 2d*4
      - target: Exposed
        apply:
        - Hobbled
    mud:
      name: Mud
      action: Tactics
      effect:
      - target: Self
        apply:
        - Remove Vulnerable
        - Remove Vulnerable
        - Remove Vulnerable
    meld:
      name: Meld
      action: Guard
      effects:
      - target: Self
        apply:
        - Resistance +5
    gloop:
      name: Gloop
      action: Move
      effects:
      - target: Self
        apply:
        - Ignore Difficult Terrain
        - Ignore Challenging Terrain
        
townGuard:
  name: Town Guard
  flavor: The uniform tabard is well kept, but shows signs of wear.
  class: Elite
  level: 1
  stats:
    Evasion: 5
    Defense: 7
    Resilience: 4
    Speed: 4
    Energy: 3
  powers:
    cleave:
      name: Cleave
      action: Attack
      uses: Energy
      effects:
      - target: Double
        apply:
        - 2d*6
    hook:
      name: Hook
      action: Tactics
      uses: At-Will
      effects:
      - target: Single
        apply:
        - Weak
        - Weak
        - Slow
        - Slow
    watchsDiscipline:
      name: Watch's Discipline
      action: Tactics
      uses: At-Will
      - target: Single
        apply:
        - Heroic
        - Heroic
    reachAdvantage:
      name: Reach Advantage
      flavor: The advantage of a polearm's reach makes it more difficult to outflank him.
      action: Guard
      uses: At-Will
      effects:
      - target: Zone
        apply:
        - +1 Movement Point Cost
        
townGuardArcher:
  name: Town Guard Archer
  flavor: The uniform tabard is well kept, but shows signs of wear.
  class: Mob
  level: 1
  stats:
    Evasion: 5
    Defense: 7
    Resilience: 2
    Speed: 4
  powers:
    loose:
      name: Loose
      action: Attack
      pattern: Precision
      uses: At-Will
      description: >
        The target takes 2d*4 damage.
    volley:
      name: Volley
      action: Attack
      pattern: Scatter
      uses: At-Will
      description: >
        Each target takes 2d*2 damage.
    watchsDiscipline:
      name: Watch's Discipline
      action: Tactics
      uses: At-Will
      description: >
        Restore one condition. Refresh one defense token.
    guardsman:
      name: Guardsman
      action: Move
      uses: At-Will
      description: >
        If you end your movement next to an ally, they may refresh a defense token.

